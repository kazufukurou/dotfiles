[user]
    name = Artyom Mironov
    email = kazufukurou@gmail.com
[core]
    autocrlf = input
    safecrlf = false
    editor = $EDITOR
[push]
    default = simple
[color]
    ui = true
    status = auto
    branch = auto
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    glog = log --pretty=format:\"%C(blue)%h%C(reset) %C(black)%ad%C(reset) %s %C(black)%an%C(reset)%C(yellow)%d%C(reset)\" --graph --date=short
[credential]
    helper = cache --timeout=3600
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[merge]
    tool = diffconflicts
[mergetool "diffconflicts"]
    cmd = diffconflicts $EDITOR $BASE $LOCAL $REMOTE $MERGED
    trustExitCode = true
    keepBackup = false
    prompt = false

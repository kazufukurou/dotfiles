<?xml version="1.0"?>
<JWM>
    <!-- The root menu. -->
    <RootMenu onroot="12">
        <Program icon="terminal.png" label="Terminal">urxvt</Program>
        <Program icon="folder-blue.png" label="Files">pcmanfm</Program>
        <Menu icon="applications-other.png" label="Applications">
            <Program icon="audacity.png" label="Audacity">audacity</Program>
            <Program icon="music.png" label="Audacious">audacious</Program>
            <Program icon="calc.png" label="Calculator">mate-calc</Program>
            <Program icon="firefox.png" label="Firefox">firefox</Program>
            <Program icon="libreoffice.png" label="LibreOffice">libreoffice</Program>
            <Program icon="text-editor.png" label="Scite">scite</Program>
        </Menu>
        <Menu icon="applications-graphics.png" label="Graphics">
            <Program icon="darktable.png" label="Darktable">darktable</Program>
            <Program icon="gimp.png" label="Gimp">gimp</Program>
            <Program icon="inkscape.png" label="Inkscape">inkscape</Program>
            <Program icon="scanner.png" label="VueScan">~/Downloads/vuex6495/VueScan/vuescan</Program>
        </Menu>
        <Menu icon="applications-games.png" label="Games">
            <Program icon="ppsspp.png" label="PPSSPP">ppsspp-sdl</Program>
            <Program icon="tesseract.png" label="Tesseract">tesseract</Program>
            <Program icon="xonotic.png" label="Xonotic">xonotic-glx</Program>
        </Menu>
        <Menu icon="applications-utilities.png" label="Utilities">
            <Program icon="lxappearance.png" label="Appearance">lxappearance</Program>
        </Menu>
        <Menu icon="applications-system.png" label="System">
            <Program icon="lock.png" label="Lock">slock</Program>
            <Restart label="Restart" icon="system-restart.png"/>
            <Exit label="Exit" confirm="true" icon="exit.png"/>
            <Program label="Hibernate" icon="system-hibernate.png">sudo /sbin/zzz</Program>
            <Program label="Reboot" icon="system-reboot.png">sudo /sbin/reboot</Program>
            <Program label="Shutdown" icon="system-shutdown.png">sudo /sbin/poweroff</Program>
        </Menu>
        <!-- <Separator/> -->
    </RootMenu>

    <!-- Options for program groups. -->
    <Group>
        <Option>tiled</Option>
        <Option>aerosnap</Option>
    </Group>
    <Group>
        <Class>Pidgin</Class>
        <Option>sticky</Option>
    </Group>
    <Group>
        <Name>xterm</Name>
        <Option>vmax</Option>
    </Group>
    <Group>
        <Name>xclock</Name>
        <Option>drag</Option>
        <Option>notitle</Option>
    </Group>

    <!-- Tray at the bottom. -->
    <Tray x="0" y="-1" autohide="off">
        <Spacer width="2"/>
        <TrayButton icon="computer">root:1</TrayButton>
        <Spacer width="2"/>
        <TrayButton icon="desktop.png">showdesktop</TrayButton>
        <Spacer width="2"/>
        <!-- <Pager labeled="true"/> -->
        <TaskList maxwidth="256"/>
        <Dock/>
        <Clock format="%b %e %a %R"><Button mask="123">exec:xclock</Button></Clock>
        <Spacer width="2"/>
    </Tray>

    <!-- Visual Styles -->
    <WindowStyle>
        <Font>Sans-8</Font>
        <Width>4</Width>
        <Height>32</Height>
        <Corner>3</Corner>
        <Foreground>#FFFFFF</Foreground>
        <Background>#555555</Background>
        <Outline>#555555</Outline>
        <Opacity>1.0</Opacity>
        <Active>
            <Foreground>#FFFFFF</Foreground>
            <Background>#546e7a</Background>
            <Outline>#546e7a</Outline>
            <Opacity>1.0</Opacity>
        </Active>
    </WindowStyle>
    <TrayStyle group="true" list="all">
        <Font>Sans-8</Font>
        <Background>#333333</Background>
        <Foreground>#FFFFFF</Foreground>
        <Outline>#000000</Outline>
        <Opacity>1.0</Opacity>
    </TrayStyle>
    <PagerStyle>
        <Outline>#000000</Outline>
        <Foreground>#555555</Foreground>
        <Background>#333333</Background>
        <Text>#FFFFFF</Text>
        <Active>
            <Foreground>#0077CC</Foreground>
            <Background>#004488</Background>
        </Active>
    </PagerStyle>
    <MenuStyle>
        <Font>Sans-8</Font>
        <Foreground>#FFFFFF</Foreground>
        <Background>#333333</Background>
        <Outline>#000000</Outline>
        <Active>
            <Foreground>#FFFFFF</Foreground>
            <Background>#0077CC</Background>
        </Active>
        <Opacity>1.0</Opacity>
    </MenuStyle>
    <PopupStyle>
        <Font>Sans-8</Font>
        <Foreground>#000000</Foreground>
        <Background>#999999</Background>
    </PopupStyle>

    <!-- Path where icons can be found.
         IconPath can be listed multiple times to allow searching
         for icons in multiple paths.
      -->
    <IconPath>/usr/share/icons/Paper/32x32/apps</IconPath>
    <IconPath>/usr/share/icons/Paper/32x32/actions</IconPath>
    <IconPath>/usr/share/icons/Paper/32x32/categories</IconPath>
    <IconPath>/usr/share/icons/Paper/32x32/places</IconPath>
    <IconPath>/usr/share/icons/Paper/32x32/devices</IconPath>
    <IconPath>/usr/local/share/jwm</IconPath>

    <!-- Virtual Desktops -->
    <!-- Desktop tags can be contained within Desktops for desktop names. -->
    <Desktops width="1" height="1">
        <!-- Default background. Note that a Background tag can be
              contained within a Desktop tag to give a specific background
              for that desktop.
         -->
        <Background type="tile">/home/void/wallpaper.png</Background>
        <!-- <Background type="solid">#111111</Background> -->
    </Desktops>

    <!-- Double click speed (in milliseconds) -->
    <DoubleClickSpeed>400</DoubleClickSpeed>

    <!-- Double click delta (in pixels) -->
    <DoubleClickDelta>2</DoubleClickDelta>

    <!-- The focus model (sloppy or click) -->
    <FocusModel>sloppy</FocusModel>

    <!-- The snap mode (none, screen, or border) -->
    <SnapMode distance="10">border</SnapMode>

    <!-- The move mode (outline or opaque) -->
    <MoveMode>opaque</MoveMode>

    <!-- The resize mode (outline or opaque) -->
    <ResizeMode>opaque</ResizeMode>

    <!-- Key bindings -->
    <Key key="Up">up</Key>
    <Key key="Down">down</Key>
    <Key key="Right">right</Key>
    <Key key="Left">left</Key>
    <Key key="h">left</Key>
    <Key key="j">down</Key>
    <Key key="k">up</Key>
    <Key key="l">right</Key>
    <Key key="Return">select</Key>
    <Key key="Escape">escape</Key>

    <Key mask="A" key="Tab">nextstacked</Key>
    <Key mask="A" key="F4">close</Key>
    <Key mask="A" key="#">desktop#</Key>
    <Key mask="A" key="F1">root:1</Key>
    <Key mask="A" key="F2">window</Key>
    <Key mask="A" key="F10">maximize</Key>
    <Key mask="A" key="Right">rdesktop</Key>
    <Key mask="A" key="Left">ldesktop</Key>
    <Key mask="A" key="Up">udesktop</Key>
    <Key mask="A" key="Down">ddesktop</Key>
</JWM>

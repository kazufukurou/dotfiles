<?xml version="1.0"?>
<JWM>
    <RootMenu onroot="12" height="47">
        <Program icon="terminal.png" label="Terminal">alacritty -t terminal</Program>
        <Program icon="file-manager.png" label="Files">pcmanfm</Program>
        <Menu icon="applications-other.png" label="Applications">
            <Program icon="audacity.png" label="Audacity">audacity</Program>
            <Program icon="music.png" label="Audacious">audacious</Program>
            <Program icon="calc.png" label="Calculator">mate-calc</Program>
            <Program icon="chromium.png" label="Chromium">chromium</Program>
            <Program icon="chromium.png" label="Chromium Proxy">chromium --proxy-server="socks5://localhost:8080"</Program>
            <Program icon="firefox.png" label="Firefox">firefox</Program>
            <Program icon="idea.png" label="IntelliJ IDEA">idea</Program>
            <Program icon="libreoffice.png" label="LibreOffice">libreoffice</Program>
            <Program icon="text-editor.png" label="Scite">scite</Program>
            <Program icon="transmission.png" label="Transmission">transmission-gtk</Program>
        </Menu>
        <Menu icon="applications-graphics.png" label="Graphics">
            <Program icon="azpainter.png" label="AzPainter">azpainter</Program>
            <Program icon="blender.png" label="Blender">blender</Program>
            <Program icon="darktable.png" label="Darktable">darktable</Program>
            <Program icon="gimp.png" label="Gimp">gimp</Program>
            <Program icon="inkscape.png" label="Inkscape">inkscape</Program>
            <Program icon="openscad.png" label="OpenSCAD">openscad</Program>
            <Program icon="scanner.png" label="VueScan">~/Downloads/vuex6495/VueScan/vuescan</Program>
        </Menu>
        <Menu icon="applications-games.png" label="Games">
            <Program icon="hegdewars.png" label="Hedgewars">hedgewars</Program>
            <Program icon="ppsspp.png" label="PPSSPP">ppsspp-sdl</Program>
            <Program icon="tesseract.png" label="Tesseract">tesseract</Program>
            <Program icon="xonotic.png" label="Xonotic">xonotic-glx</Program>
        </Menu>
        <Menu icon="applications-utilities.png" label="Utilities">
            <Program icon="preferences-theme.png" label="Appearance">lxappearance</Program>
            <Program icon="sound.png" label="Volume">pavucontrol</Program>
        </Menu>
        <Menu icon="applications-system.png" label="System">
            <Program icon="lock.png" label="Lock">slock</Program>
            <Restart label="Restart" icon="system-restart.png"/>
            <Exit label="Exit" confirm="false" icon="exit.png"/>
            <Program label="Hibernate" icon="system-hibernate.png">sudo /sbin/zzz</Program>
            <Program label="Reboot" icon="system-reboot.png">sudo /sbin/reboot</Program>
            <Program label="Shutdown" icon="system-shutdown.png">sudo /sbin/shutdown</Program>
        </Menu>
        <!-- <Separator/> -->
    </RootMenu>

    <!-- Options for program groups. -->
    <Group>
        <Name>Alacritty</Name>
        <Name>urxvt</Name>
        <Name>st</Name>
        <Option>icon:terminal</Option>
    </Group>
    <Group>
        <Class>Vimb</Class>
        <Option>maximized</Option>
    </Group>

    <Tray x="0" y="0" layout="vertical" width="55">
        <TrayButton icon="computer">root:1</TrayButton>
        <TrayButton icon="desktop.png">showdesktop</TrayButton>
        <!-- <Pager labeled="true"/> -->
        <TaskList maxwidth="256" labeled="false" height="53"/>
        <Spacer/>
        <Dock/>
        <Clock format="%b %-d">exec:alacritty -e bash -c 'cal -3; read -s -n 1'</Clock>
        <Clock format="%a">exec:alacritty -e bash -c 'cal -3; read -s -n 1'</Clock>
        <Clock format="%R">exec:alacritty -e bash -c 'cal -3; read -s -n 1'</Clock>
    </Tray>

    <!-- Visual Styles -->
    <WindowStyle>
        <Font>Sans-8</Font>
        <Width>4</Width>
        <Height>22</Height>
        <Corner>0</Corner>
        <Foreground>#666666</Foreground>
        <Background>#111111</Background>
        <Outline>#111111</Outline>
        <Opacity>1.0</Opacity>
        <Active>
            <Foreground>#999999</Foreground>
            <Background>#222222</Background>
            <Outline>#222222</Outline>
            <Opacity>1.0</Opacity>
        </Active>
    </WindowStyle>
    <TaskListStyle>
         <Font>Sans-8</Font>
         <Foreground>#FFFFFF</Foreground>
         <Active>
             <Background>#444444</Background>
         </Active>
    </TaskListStyle>
    <TrayStyle group="false" list="all" labeled="false">
        <Background>#222222</Background>
        <Foreground>#999999</Foreground>
        <Outline>#222222</Outline>
        <Opacity>1.0</Opacity>
    </TrayStyle>
    <ClockStyle>
        <Font>Sans-7</Font>
    </ClockStyle>
    <PagerStyle>
        <Outline>#000000</Outline>
        <Foreground>#555555</Foreground>
        <Background>#333333</Background>
        <Text>#FFFFFF</Text>
        <Active>
            <Foreground>#0077CC</Foreground>
            <Background>#004488</Background>
        </Active>
    </PagerStyle>
    <MenuStyle>
        <Font>Sans-8</Font>
        <Foreground>#999999</Foreground>
        <Background>#222222</Background>
        <Outline>#000000</Outline>
        <Active>
            <Foreground>#FFFFFF</Foreground>
            <Background>#444444</Background>
        </Active>
        <Opacity>1.0</Opacity>
    </MenuStyle>
    <PopupStyle>
        <Font>Sans-8</Font>
        <Foreground>#000000</Foreground>
        <Background>#999999</Background>
    </PopupStyle>

    <StartupCommand>pcmanfm --desktop</StartupCommand>

    <!-- Path where icons can be found.
         IconPath can be listed multiple times to allow searching
         for icons in multiple paths.
      -->
    <IconPath>/usr/share/icons/Paper/32x32@2x/apps</IconPath>
    <IconPath>/usr/share/icons/Paper/32x32@2x/actions</IconPath>
    <IconPath>/usr/share/icons/Paper/32x32@2x/categories</IconPath>
    <IconPath>/usr/share/icons/Paper/32x32@2x/places</IconPath>
    <IconPath>/usr/share/icons/Paper/32x32@2x/devices</IconPath>
    <IconPath>/usr/share/icons/Paper/32x32@2x/mimetypes</IconPath>
    <IconPath>/usr/local/share/jwm</IconPath>

    <!-- Virtual Desktops -->
    <!-- Desktop tags can be contained within Desktops for desktop names. -->
    <Desktops width="1" height="1">
        <!-- Default background. Note that a Background tag can be
              contained within a Desktop tag to give a specific background
              for that desktop.
         -->
        <!-- <Background type="tile">/home/void/wallpaper.png</Background> -->
        <!-- <Background type="solid">#111111</Background> -->
    </Desktops>

    <DefaultIcon>exec</DefaultIcon>

    <!-- Double click speed (in milliseconds) -->
    <DoubleClickSpeed>400</DoubleClickSpeed>

    <!-- Double click delta (in pixels) -->
    <DoubleClickDelta>2</DoubleClickDelta>

    <!-- The focus model (sloppy or click) -->
    <FocusModel>sloppy</FocusModel>

    <!-- The snap mode (none, screen, or border) -->
    <SnapMode distance="10">border</SnapMode>

    <!-- The move mode (outline or opaque) -->
    <MoveMode>opaque</MoveMode>
    <!-- The resize mode (outline or opaque) -->
    <ResizeMode>opaque</ResizeMode>

    <!-- Key bindings -->
    <Key mask="1" key="h">prev</Key>
    <Key mask="1" key="t">next</Key>
    <Key mask="1" key="w">maximize</Key>
    <Key mask="1" key="m">fullscreen</Key>
    <Key mask="1" key="z">close</Key>
</JWM>

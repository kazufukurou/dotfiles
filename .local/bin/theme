#!/bin/bash

dir="$XDG_CONFIG_HOME/base16-shell/src"

if [ $# -eq 1 ]; then
  script="$dir/scripts/base16-$1.sh"
  . "$script" 2> /dev/null && ln -fs "$script" "$dir/../.base16_theme" || echo "Usage: `basename $0` THEME"
else
  [ ! -d "$dir" ] && git clone https://github.com/chriskempson/base16-shell "$dir"
  cd "$dir" && git pull
  ls scripts/base16-*.sh | cut -d. -f1 | cut -d- -f2- | column
fi

#!/bin/sh

terminal=st-256color
browser=vimb

if [ $# -eq 1 ]; then
    mwids=""
    uwids=""
    for wid in $(lsw); do
        class=$(xprop -id $wid WM_CLASS | cut -d\" -f2)
        type=o
        [ "$class" = "$terminal" ] && type=t
        [ "$class" = "$browser" ] && type=b
        xprop -id $wid -f WMG 8s -set WMG $type
    done
    for wid in $(lsw -a); do
        g=$(xprop -id $wid WMG | grep WMG | cut -d\" -f2)
        if [ "$1" = "a" ]; then
            [ "$g" != "" ] && mwids="$mwids $wid"
        else
            [ "$g" = "$1" ] && mwids="$mwids $wid" || uwids="$uwids $wid"
        fi
    done
    mapw -m $mwids
    mapw -u $uwids
else
    echo "usage: $(basename $0) <t|b|o|a>"
fi

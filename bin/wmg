#!/bin/sh

. ~/.config/wmrc/config

if [ $# -eq 1 ]; then
    for wid in $(lsw -a); do
        b=$(wattr b $wid)
        if [ $b -gt 0 ]; then
            class=$(xprop -id $wid WM_CLASS | cut -d\" -f2)
            echo $class | grep -q -E $1 && mapw -m $wid || mapw -u $wid
        fi
    done
    echo "T" > $PANEL_FIFO
else
    echo "$(basename $0) <expr>"
fi

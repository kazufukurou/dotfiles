#!/bin/sh

terminal=st-256color
browser=vimb

if [ $# -eq 2 ]; then
    for wid in $(lsw); do
        class=$(xprop -id $wid WM_CLASS | cut -d\" -f2)
        type=o
        [ "$class" = "$terminal" ] && type=t
        [ "$class" = "$browser" ] && type=b
        xprop -id $wid -f WMG 8s -set WMG $type
    done
    uwids=""
    mwid=""
    for wid in $(lsw -a); do
        g=$(xprop -id $wid WMG | grep 'WMG(STRING) =' | cut -d\" -f2)
        x=$(wattr x $wid)
        [ $x -eq 0 ] && dn=0 || dn=1
        if [ $dn -eq $1 ]; then
            uwids="$uwids $wid"
            [ "$g" = "$2" ] && mwid="$wid"
        fi
    done
    mapw -u $uwids
    mapw -m $mwid
else
    echo "usage: $(basename $0) <NUM> <t|b|o>"
fi

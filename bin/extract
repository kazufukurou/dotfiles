#!/bin/bash

if [ -f "$1" ] ; then
    case "$1" in
        *.7z) 7z x "$1" -o"${1%.*}" ;;
        *.tar.bz2) mkdir "${1%%.*}" && tar xjf "$1" -C "${1%%.*}" ;;
        *.tar.gz) mkdir "${1%%.*}" && tar xzf "$1" -C "${1%%.*}" ;;
        *.tar.xz) mkdir "${1%%.*}" && tar xf "$1" -C "${1%%.*}" ;;
        *.bz2) bunzip2 "$1" ;;
        *.rar) unrar x "$1" ${1%.*} ;;
        *.gz) gunzip "$1" ;;
        *.tar) mkdir "${1%.*}" && tar xf "$1" -C $ "${1%.*}" ;;
        *.tbz2) mkdir "${1%.*}" && tar xjf "$1" -C "${1%.*}" ;;
        *.tgz) mkdir "${1%.*}" && tar xzf "$1" -C "${1%.*}" ;;
        *.zip) unzip "$1" -d "${1%.*}" ;;
        *.Z) uncompress "$1" ;;
        *) echo "'$1' cannot be extracted via extract()" ;;
    esac
else
    echo "'$1' is not a valid file"
fi

#!/bin/sh

. ~/bin/wmrc

samedisplay() {
    wx=$(wattr x $1)
    ( [ $DX -eq 0 ] && [ $wx -lt $SW1 ] ) || ( [ $DX -gt 0 ] && [ $wx -ge $SW1 ] ) && return 0 || return 1
}

for wid in $(lsw); do
    if samedisplay $wid; then
        wtp $DX $PANEL $((SW - 2 * WB)) $((SH - 2 * WB - PANEL)) $wid
    fi
done

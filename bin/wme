#!/bin/sh

. ~/.config/wmrc/config

[ -e "$PANEL_FIFO" ] && rm "$PANEL_FIFO"
mkfifo "$PANEL_FIFO"
urxvt -name panel -geometry 212x2 -bw 0 -b 0 -bg "#000000" -e panel &
while IFS=: read ev wid; do
    case $ev in
        18) wattr $(pfw) || wfw prev 2>/dev/null ;;
        4|7|19) wattr o $wid || wmf $wid 2>/dev/null ;;
    esac
done

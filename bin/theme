#!/bin/bash

dir=~/.config/base16-shell
[ ! -d "$dir" ] && git clone https://github.com/chriskempson/base16-shell.git $dir
[ -d "$dir" ] && cd $dir && git pull

scripts=(`ls $dir/scripts/base16*.sh`)
for script in "${scripts[@]}"; do
    theme=${script##*/}
    theme=${theme%.sh}
    theme=${theme#*-}
    printf "%-8s\n" "${theme}"
done | column
echo ""
read -p "Enter theme: " name
script=$dir/scripts/base16-$name.sh

if [ -f $script ]; then
    . $script
    ln -fs $script $ZDOTDIR/.base16_theme
fi

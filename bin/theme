#!/bin/bash

dir=~/Repos/base16-shell/scripts
scripts=(`ls $dir/base16*.sh`)
for script in "${scripts[@]}"; do 
    theme=${script##*/}
    theme=${theme%.sh}
    theme=${theme#*-}
    printf "%-8s\n" "${theme}"
done | column
echo ""
read -p "Enter theme: " name
script=$dir/base16-$name.sh

if [ -f $script ] ; then
    . $script
    ln -fs $script $ZDOTDIR/.base16_theme
fi

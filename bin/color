#!/bin/bash

n=(0 7 1 3 2 6 4 5)
c=$(tput sgr0)
b=$(tput bold)
for x in "" $b ; do
    for i in ${n[@]} ; do printf "$x$(tput setaf $i) ██████████ "; done
    echo $c
done
for x in "" $b ; do
    for i in ${n[@]} ; do printf "$x$(tput setaf $i) %2s $(getxresource color$((i+d))) " $((i+d)); done
    echo $c
    d=8
done
for x in "" $b ; do
    for i in ${n[@]} ; do
        printf "$c $(tput setab $i) "
        for j in ${n[@]} ; do printf "$x$(tput setaf $j)x"; done
        printf " $c "
    done
    echo ""
done

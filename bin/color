#!/bin/bash

num=(0 7 1 3 2 6 4 5)

for j in {0..7}; do
    f=${num[j]}
    echo -en "$(tput setaf $f) ███████ "
done
echo ""
for j in {0..7}; do
    f=${num[j]}
    echo -en "$(tput bold)$(tput setaf $f) ███████ "
done
echo $(tput sgr0)
for i in {-1..7}; do
    if [ $i -ge 0 ] ; then
        b=${num[i]}
        echo -en "$(tput setab $b)"
    fi
    for j in {0..7}; do
        f=${num[j]}
        fg=$(getxresource color$f)
        echo -en "$(tput setaf $f) $fg "
    done
    echo $(tput sgr0)
    if [ $i -ge 0 ] ; then
        echo -en "$(tput setab $b)"
    fi
    for j in {0..7}; do
        f=${num[j]}
        fg=$(getxresource color$((f+8)))
        echo -en "$(tput bold)$(tput setaf $f) $fg "
    done
    echo $(tput sgr0)
done

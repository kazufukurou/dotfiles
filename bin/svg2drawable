#!/bin/sh
fullpath=$(readlink -f $1)
newpath=${fullpath%/*}
newpath=${newpath%/*}/res
filename=${fullpath##*/}
filename=${filename%.*}.png
echo $fullpath
echo $newpath
echo $filename

mkdir $newpath/mipmap-mdpi
mkdir $newpath/mipmap-hdpi
mkdir $newpath/mipmap-xhdpi
mkdir $newpath/mipmap-xxhdpi
mkdir $newpath/mipmap-xxxhdpi

inkscape -z -f $1 -w 48 -h 48 -e $newpath/mipmap-mdpi/$filename
inkscape -z -f $1 -w 72 -h 72 -e $newpath/mipmap-hdpi/$filename
inkscape -z -f $1 -w 96 -h 96 -e $newpath/mipmap-xhdpi/$filename
inkscape -z -f $1 -w 144 -h 144 -e $newpath/mipmap-xxhdpi/$filename
inkscape -z -f $1 -w 192 -h 192 -e $newpath/mipmap-xxxhdpi/$filename

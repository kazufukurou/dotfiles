#!/bin/sh

#setxkbmap -model pc104 -layout us,ru -variant dvp, -option grp:alt_space_toggle,ctrl:nocaps
if [ $(pgrep -cx "(setxkbmap|initxkbmap)") -gt 1 ] ; then
    printf "%s\n" "Script is already running." >&2
    exit 1
else
    setxkbmap -model pc104 -layout us -variant dvp
    sleep 1 && setxkbmap -model pc104 -layout us,ru -variant dvp, -option grp:alt_space_toggle,ctrl:nocaps &
fi


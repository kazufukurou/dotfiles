#!/bin/sh

dmenu_opts="-l 33 -fn monospace:pixelsize=18 -nf #999999 -nb #666666 -sf #ffffff -sb #666666"
n=0
output=""
for w in $(lsw | grep -v $(pfw)); do
    n=$((n+1))
    [ $n -gt 1 ] && output="$output\n"
    output="$output$w:$n $(xprop -id $w WM_NAME | cut -d\" -f2)"
done
if [ $n -eq 1 ]; then
    wmf $(echo $output | cut -d: -f1)
elif [ $n -gt 1 ]; then
    win=$(echo $output | cut -d: -f2 | dmenu $dmenu_opts | cut -d' ' -f1)
    wmf $(echo $output | sed -n "$win p" | cut -d: -f1)
fi

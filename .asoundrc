pcm.!default {
    type plug
    slave.pcm {
        type route
        slave.pcm {
            type multi
            slaves {
                a {
                    pcm "hw:0"
                    channels 2
                }
                b {
                    pcm {
                        type softvol
                        slave.pcm "hw:1"
                        control {
                            name Master
                            card 1
                        }
                    }
                    channels 2
                }
            }
            bindings {
                0 { slave a; channel 0; }
                1 { slave a; channel 1; }
                2 { slave b; channel 0; }
                3 { slave b; channel 1; }
            }
        }
        ttable { 0.0 1; 1.1 1; 0.2 1; 1.3 1; }
    }
}

ctl.!default {
    type hw
    card 1
}

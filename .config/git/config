[user]
    name = Artyom Mironov
    email = kazufukurou@gmail.com
[core]
    autocrlf = input
    safecrlf = false
    editor = $EDITOR
[push]
    default = simple
[color]
    ui = true
    status = auto
    branch = auto
[credential]
    helper = cache --timeout=3600
[alias]
    a = add
    aa = add --all
    b = branch
    bdg = "!git fetch -p && git for-each-ref --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" {print $1}' | xargs git branch -D"
    c = commit -v
    ca = commit -v -a
    cam = commit -v -a --amend
    camn = commit -v -a --amend --no-edit
    ch = cherry-pick
    cha = cherry-pick --abort
    chc = cherry-pick --continue
    cm = commit -v --amend
    cod = checkout develop
    com = checkout master
    co = checkout
    cob = checkout -b
    d = diff
    ds = diff --stat
    f = fetch
    fa = fetch --all --prune
    l = log --pretty='%C(blue)%h%C(reset) %C(green)%ad%C(reset) %s %C(green)%an%C(reset)%C(yellow)%d%C(reset)' --graph --date=iso
    m = merge
    ma = merge --abort
    mc = merge --continue
    mt = mergetool --no-prompt
    pl = pull
    plr = pull --rebase
    pu = push
    puf = push --force-with-lease
    puu = push --set-upstream origin HEAD
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbd = rebase develop
    rbm = rebase master
    rh = reset HEAD
    rhh = reset HEAD --hard
    s = status -s
    sh = stash
    su = submodule
    suu = submodule update --init
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[merge]
    tool = fugitive
[mergetool]
    keepBackup = false
[mergetool "fugitive"]
    cmd = vim -f -c Gdiff $MERGED
    trustExitCode = true
    prompt = false
[pull]
	ff = only

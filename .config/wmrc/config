#!/bin/sh

PFW=$(pfw)
CUR=${2:-$(pfw)}
ROOT=$(lsw -r)
WX=$(wattr x $PFW)
WW=$(wattr w $PFW)
WH=$(wattr h $PFW)
WB=$(wattr b $CUR)
SW1=$(xrandr | grep "*" | cut -d' ' -f4 | cut -dx -f1 | sed "1q;d")
[ $WX -ge $SW1 ] && DX=$SW1 || DX=0
[ $WX -ge $SW1 ] && DN=2 || DN=1
SW=$(xrandr | grep "*" | cut -d' ' -f4 | cut -dx -f1 | sed "${DN}q;d")
SH=$(xrandr | grep "*" | cut -d' ' -f4 | cut -dx -f2 | sed "${DN}q;d")
echo $WX-$WW-$WH-$SW1-$DN-$DX-$SW-$SH
PANEL=28
ACTIVE=0x666666
INACTIVE=0x333333
TERMINAL=st-256color
BROWSER=vimb
PANEL_FIFO=/tmp/panel-fifo

samedisplay() {
    wx=$(wattr x $1)
    ( [ $DX -eq 0 ] && [ $wx -lt $SW1 ] ) || ( [ $DX -gt 0 ] && [ $wx -ge $SW1 ] ) && return 0 || return 1
}

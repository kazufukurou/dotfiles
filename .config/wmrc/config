#!/bin/sh

PFW=$(pfw)
WW=$(wattr w $PFW)
WH=$(wattr h $PFW)
CUR=${2:-$(pfw)}
ROOT=$(lsw -r)
DN=1
#SWD=$(xrandr | grep "*" | cut -d' ' -f4 | cut -dx -f1 | sed "$DN!d")
#SHD=$(xrandr | grep "*" | cut -d' ' -f4 | cut -dx -f2 | sed "$DN!d")
SW=$(wattr w $ROOT)
SH=$(wattr h $ROOT)
BWIDTH=$(wattr b $CUR)
PANEL=27
GAP=8
BW=2
ACTIVE=0x$(getxresource color0 | cut -d# -f2)
INACTIVE=0x000000

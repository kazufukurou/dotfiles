super + {_,ctrl + }Tab
    focus {next,prev}

#super + {_,shift + }{q,e}
#    bspc node @{parent,/} -R {-90,90}

#super + ctrl + {q,e}
#    bspc node @parent -r {-27,+27}

#super + {_,ctrl + ,shift + }{a,d,w,s}
#    bspc node {-f ,-p "~",-s }{west,east,north,south}
super + {_,ctrl + }{a,d,w,s}
    {wmv,wrs} {-27 0,27 0,0 -27,0 27} $(pfw)


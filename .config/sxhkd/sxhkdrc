super + shift + Escape
     killall panel; \
     killall swm

# super + {_,ctrl + }Escape
#     bspc node {-c,-k}
super + Escape
    killw $(pfw)

super + {_,ctrl + ,shift + }space
    {fullscreen $(pfw),tile,switch_grid}


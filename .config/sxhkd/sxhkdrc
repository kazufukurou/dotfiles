super + shift + Escape
     killall panel; \
     killall swm

super + Escape
    killw -p $(pfw)

super + grave
    dmenurun

super + space
    wml

super + Tab
    dmenuwin

super + {shift,ctrl} + {a,d,w,s}
    {wmv,wrs} {-27 0,27 0,0 -27,0 27} $(pfw)

super + {a,d,w,s}
    wmf {left,right,up,down}

super + {q,e}
    pfw=$(pfw); \
    wmv {-,_}$(xrandr | grep "*" | cut -d' ' -f4 | cut -dx -f1 | sed "1!d") 0 $pfw; \
    wmf $pfw

super + {j,k,l,i}
    wmg {1,2,3,a}

super + !button{1,3}
    {wmv, wrs} -a %i %i $(pfw)

super + Return
    st

super + z
    slock & sleep 1 && xset dpms force off

super + x
    vimb

super + shift + z
    pkill -USR1 -x sxhkd

XF86AudioRaiseVolume
    amixer set Master playback 1+

XF86AudioLowerVolume
    amixer set Master playback 1-

XF86AudioMute
    amixer set Master toggle

XF86AudioNext
    mplayercmd next

XF86AudioPrev
    mplayercmd prev

XF86AudioPlay
    mplayercmd pause

#
# bspwm hotkeys
#

super + shift + Escape
    killall panel; \
    bspc quit

super + {_,ctrl + }Escape
    bspc node {-c,-k}

super + space
    bspc desktop -l next

super + {shift,ctrl} + space
   bspc node -t "~"{floating,fullscreen}

super + {_,ctrl + }Tab
    bspc node -f {next,prev}

super + {_,shift + }{q,e}
    bspc node @{parent,/} -R {-90,90}

super + {_,ctrl + ,shift + }{a,d,w,s}
    bspc node {-f ,-p "~",-s }{west,east,north,south}

super + {_,shift + }{u,i,o,j,k,l,m,comma,period}
    bspc {desktop -f,node -d} {0-8}

super + {_,shift + }BackSpace
    bspc {monitor -f next, node -m next}

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

#
# wm independent hotkeys
#

# super + {_,ctrl + ,shift + }Return
#     urxvt{_, -e tmux, -e zsh -c "tmux -q has-session && exec tmux attach-session && tmux new-window -d || exec tmux new-session -s$USER"}

super + Return
    urxvt

super + z
    slock & xset dpms force off

# super + c
#     ~/bin/toggletray

super + x
    vimb

# make sxhkd reload its configuration files:
super + shift + z
    pkill -USR1 -x sxhkd

# Increase volume
XF86AudioRaiseVolume
    amixer set Master playback 1+

# Decrease volume
XF86AudioLowerVolume
    amixer set Master playback 1-

# Toggle mute
XF86AudioMute
    amixer set Master toggle;

# Music next
XF86AudioNext
    cmus-remote --next

# Music prev
XF86AudioPrev
    cmus-remote --prev

# Music play/pause
XF86AudioPlay
    cmus-remote --pause


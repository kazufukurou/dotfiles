super + shift + Escape
    killall wew

super + Escape
    killw -p $(pfw)

super + {space,Tab}
    {dmenurun,dmenuwin}

super + BackSpace
    wid=$(pfw); \
    [ $(wattr x $wid) -eq 0 ] && wmv 9999 0 $wid || wmv -9999 0 $wid; \
    wmf $wid

super + {_,shift + }{j,k,l}
    wmg {0,1} {t,b,o}

super + !button{1,3}
    {wmv, wrs} -a %i %i $(pfw)

super + {_,shift + }Return
    {st,vimb}

super + z
    slock & sleep 1 && xset dpms force off

super + o
    pkill -USR1 -x sxhkd

XF86AudioRaiseVolume
    amixer set Master playback 1+

XF86AudioLowerVolume
    amixer set Master playback 1-

XF86AudioMute
    amixer set Master toggle

XF86AudioNext
    mplayercmd next

XF86AudioPrev
    mplayercmd prev

XF86AudioPlay
    mplayercmd pause

super + shift + Escape
     killall panel; \
     killall wew

super + Escape
    killw $(pfw)

super + {_,ctrl + ,shift + }space
    wml {full,tile,grid}

super + {_,ctrl + }Tab
    wfw {next,prev}

super + {shift,ctrl} + {a,d,w,s}
    {wmv,wrs} {-27 0,27 0,0 -27,0 27} $(pfw)

super + {a,d,w,s}
    wfw {left,right,up,down}

super + {j,k}
    wmg {urxvt,vimb}

super + !button{1,3}
    {wmv, wrs} -a %i %i $(pfw)

super + Return
    urxvt

super + z
    slock & xset dpms force off

super + x
    vimb

super + shift + z
    pkill -USR1 -x sxhkd

XF86AudioRaiseVolume
    amixer set Master playback 1+

XF86AudioLowerVolume
    amixer set Master playback 1-

XF86AudioMute
    amixer set Master toggle

XF86AudioNext
    mplayercmd next

XF86AudioPrev
    mplayercmd prev

XF86AudioPlay
    mplayercmd pause


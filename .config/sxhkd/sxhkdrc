super + shift + Escape
    killall wmc

super + Escape
    killw -p $(pfw)

super + {_,ctrl + }{Tab}
    {dmenuwin, dmenurun}

super + {space,BackSpace}
    wmc {resize,switch}

super + {_,shift + }{j,k,l}
    wmc group {0,1} {t,b,o}

super + !button{1,3}
    {wmv,wrs} -a %i %i $(pfw)

super + {_,shift + }Return
    {st,vimb}

super + z
    slock & sleep 1 && xset dpms force off

super + x
    pkill -USR1 -x sxhkd

XF86AudioRaiseVolume
    amixer set Master playback 1+

XF86AudioLowerVolume
    amixer set Master playback 1-

XF86AudioMute
    amixer set Master toggle

XF86AudioNext
    mplayercmd next

XF86AudioPrev
    mplayercmd prev

XF86AudioPlay
    mplayercmd pause

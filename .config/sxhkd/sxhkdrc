alt + s
    pkill -USR1 -x sxhkd

alt + semicolon
    dmenurun

alt + {_,shift + }Return
    {alacritty -t terminal,vimb}

alt + l
    slock & sleep 1 && xset dpms force off

alt + z
    xdotool getwindowfocus windowkill

alt + n
    transliterate

XF86MonBrightness{Down,Up}
    xbacklight {-5,+5}

XF86Audio{Raise,Lower}Volume
    amixer set Master playback {1+,1-}

XF86AudioMute
    amixer set Master toggle

XF86Audio{Next,Prev,Play}
    mplayercmd {next,prev,pause}

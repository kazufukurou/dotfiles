#
# bspwm hotkeys
#

super + shift + Escape
    killall panel; \
    bspc quit

super + {_,ctrl + }Escape
    bspc node {-c,-k}

super + space
    bspc desktop -l next

super + {shift,ctrl} + space
   bspc node -t "~{floating,fullscreen}"


super + {_,ctrl + }Tab
    bspc node -f {next,prev}

super + {_,shift + }BackSpace
    bspc {monitor -f next, node -m next}

super + {semicolon,period}
    bspc node @/ -R {-90,90}

super + {_,ctrl + ,shift + }{a,e,comma,o}
    bspc node {-f,-p,-s} {west,east,north,south}

super + {_,shift + }{g,c,r,h,t,n,m,w,v}
    bspc {desktop -f,node -d} {0-8}

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

#
# wm independent hotkeys
#

super + Return
    xterm

super + apostrophe
    slock

super + j
    ~/bin/toggletray

super + q
    firefox

# make sxhkd reload its configuration files:
super + shift + apostrophe
    pkill -USR1 -x sxhkd

# Increase volume
XF86AudioRaiseVolume
    amixer set Master playback 1+

# Decrease volume
XF86AudioLowerVolume
    amixer set Master playback 1-

# Toggle mute
XF86AudioMute
    amixer set Master toggle;

# Music next
XF86AudioNext
    cmus-remote --next

# Music prev
XF86AudioPrev
    cmus-remote --prev

# Music play/pause
XF86AudioPlay
    cmus-remote --pause


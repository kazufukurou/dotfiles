### Variables
set $black 000000
set $white ffffff
set $gray1 888888
set $gray2 666666
set $gray3 333333
set $red ff6633
set $wcTty 1:tty
set $wcWeb 2:web
set $wcIde 3:ide
set $wcEtc 4:etc
set $mod Mod1
set $menu dmenu_run -fn monospace:pixelsize=19 -nf "#$gray1" -nb "#$gray3" -sf "#$white" -sb "#$gray2"
set $lock swaylock -c $black -s --separatorcolor $gray3 --ringcolor $gray3 --keyhlcolor $gray2 --indicator-thickness 16 --indicator-radius 96

default_border none
default_floating_border none
#workspace_layout tabbed
hide_edge_borders both
titlebar_border_thickness 0
titlebar_padding 6 1
font pango:Monospace 14
floating_modifier $mod normal
output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill
gaps inner 16
smart_gaps on

bindsym $mod+m exec term
bindsym $mod+z exec term vedit
bindsym $mod+w kill
bindsym $mod+b reload
bindsym $mod+l exec $lock
bindsym $mod+Shift+w exit
bindsym $mod+semicolon exec $menu

bindsym $mod+g focus left
bindsym $mod+c focus right
bindsym $mod+n focus down
bindsym $mod+r focus up
bindsym $mod+h workspace prev
bindsym $mod+t workspace next
bindsym $mod+s workspace $wcEtc
bindsym $mod+v fullscreen
bindsym $mod+Shift+h move container to workspace $wcTty
bindsym $mod+Shift+t move container to workspace $wcWeb
bindsym $mod+Shift+n move container to workspace $wcIde
bindsym $mod+Shift+s move container to workspace $wcEtc

bindsym XF86AudioRaiseVolume exec amixer set Master playback 1+
bindsym XF86AudioLowerVolume exec amixer set Master playback 1-
bindsym XF86AudioMute exec amixer set Master toggle
bindsym XF86AudioNext exec mplayercmd next
bindsym XF86AudioPrev exec mplayercmd prev
bindsym XF86AudioPlay exec mplayercmd pause

#assign [class=".*"] $wcEtc
assign [title="st"] $wcTty
assign [class="Firefox"] $wcWeb
assign [class="jetbrains-studio"] $wcIde
for_window [title="vedit"] layout splitv

input * {
    xkb_layout us
}

bar {
    height 25
    position top
    strip_workspace_numbers yes
    font pango:Monospace 14
    status_command ~/.local/bin/swaystatus
    tray_padding 0
    colors {
        statusline #$white
        background #$gray3
        separator #$gray3

        focused_workspace #$gray3 #$gray3 #$white
        active_workspace #$gray3 #$gray3 #$white
        inactive_workspace #$gray3 #$gray3 #$gray1
        urgent_workspace #$red #$red #$white
    }
}

include /etc/sway/config.d/*

### Variables
set $black 000000
set $white ffffff
set $gray1 666666
set $gray2 333333
set $gray3 222222
set $red ff6633
set $wsTty 1:tty
set $wsWeb 2:web
set $wsIde 3:ide
set $wsEtc 4:etc
set $mod Mod1
set $menu dmenu-wl_run -h 24 -nf "#$gray1" -nb "#$black" -sf "#$white" -sb "#$black"
set $lock swaylock -c $black --separator-color $gray2 --ring-color $gray2 --key-hl-color $gray1 --indicator-thickness 16 --indicator-radius 96

# no Shift
# | ws-prev    | ws-next     | focus-up   | lock  |
# | focus-left | focus-right | focus-down | split |
# | term       | kill        | vedit      |
#
# Shift
# | move-ws1   | move-ws2     | move-ws3   | move-ws4 |
# | toggle-tab | toggle-split | fullscreen |
# | web        | exit         | reload     |
bindsym $mod+semicolon exec $menu
bindsym $mod+g workspace prev
bindsym $mod+c workspace next
bindsym $mod+h focus left
bindsym $mod+t focus right
bindsym $mod+n focus down
bindsym $mod+r focus up
bindsym $mod+m exec term
bindsym $mod+w kill
bindsym $mod+l exec $lock
bindsym $mod+s split toggle
bindsym $mod+z exec term vedit
bindsym $mod+Shift+g move container to workspace $wsTty
bindsym $mod+Shift+c move container to workspace $wsWeb
bindsym $mod+Shift+r move container to workspace $wsIde
bindsym $mod+Shift+l move container to workspace $wsEtc
bindsym $mod+Shift+h layout toggle tabbed split
bindsym $mod+Shift+t layout toggle split
bindsym $mod+Shift+n fullscreen
bindsym $mod+Shift+m exec vimb
bindsym $mod+Shift+w exit
bindsym $mod+Shift+v reload
bindsym XF86AudioRaiseVolume exec amixer set Master playback 1+
bindsym XF86AudioLowerVolume exec amixer set Master playback 1-
bindsym XF86AudioMute exec amixer set PCM toggle
bindsym XF86AudioNext exec mpvcmd next
bindsym XF86AudioPrev exec mpvcmd prev
bindsym XF86AudioPlay exec mpvcmd pause

assign [title="^(st)$"] $wsTty
assign [app_id="^(vimb|firefox)$"] $wsWeb
assign [class="^(jetbrains-studio|jetbrains-idea-ce)$"] $wsIde
assign [title="^(?!vedit|imv).*"] $wsEtc
for_window [title="^(vedit)$"] floating enable
for_window [class="^(imv)$"] floating enable
for_window [app_id="^(vimb)$"] layout tabbed

workspace $wsTty
default_border none
default_floating_border none
hide_edge_borders both
titlebar_border_thickness 0
titlebar_padding 6 1
font pango:Monospace 14
floating_modifier $mod normal
client.focused #$gray3 #$gray3 #$white #$white #$white
client.unfocused #$gray3 #$gray3 #$white #$white #$white
gaps inner 12
smart_gaps on
smart_borders on

output * {
    bg #$black solid_color
}

input * {
    xkb_layout us,ru
    xkb_variant ,phonetic_yazherty
    xkb_options grp:alt_space_toggle
}

bar {
    height 24
    position top
    strip_workspace_numbers yes
    font pango:Monospace 14
    status_command python3 .local/bin/swaystatus "$white" "$gray1" 0.8
    tray_padding 0
    colors {
        statusline #$white
        background #$black
        separator #$black

        focused_workspace #$black #$black #$white
        active_workspace #$black #$black #$white
        inactive_workspace #$black #$black #$gray1
        urgent_workspace #$red #$red #$white
    }
}

include /etc/sway/config.d/*

### Variables
set $black 000000
set $white ffffff
set $gray1 888888
set $gray2 666666
set $gray3 333333
set $red ff6633
set $blue 6688aa
set $wsTty 1:tty
set $wsWeb 2:web
set $wsIde 3:ide
set $wsEtc 4:etc
set $mod Mod1
set $menu dmenu_run -fn monospace:pixelsize=18 -nf "#$gray1" -nb "#$gray3" -sf "#$white" -sb "#$gray2"
set $lock swaylock -c $black --separator-color $gray3 --ring-color $gray3 --key-hl-color $gray2 --indicator-thickness 16 --indicator-radius 96

workspace $wsTty
default_border none
default_floating_border none
hide_edge_borders both
titlebar_border_thickness 0
titlebar_padding 6 1
font pango:Monospace 14
floating_modifier $mod normal
gaps inner 18
smart_gaps on
smart_borders on

# no Shift
# | ws-prev    | ws-next     | focus-up   | lock  |
# | focus-left | focus-right | focus-down | split |
# | term       | kill        | vedit      |
#
# Shift
# | move-ws1   | move-ws2     | move-ws3   | move-ws4 |
# | toggle-tab | toggle-split | fullscreen |
# | web        | exit         | reload     |
bindsym $mod+semicolon exec $menu
bindsym $mod+g workspace prev
bindsym $mod+c workspace next
bindsym $mod+h focus left
bindsym $mod+t focus right
bindsym $mod+n focus down
bindsym $mod+r focus up
bindsym $mod+m exec term
bindsym $mod+w kill
bindsym $mod+l exec $lock
bindsym $mod+s split toggle
bindsym $mod+z exec term vedit
bindsym $mod+Shift+g move container to workspace $wsTty
bindsym $mod+Shift+c move container to workspace $wsWeb
bindsym $mod+Shift+r move container to workspace $wsIde
bindsym $mod+Shift+l move container to workspace $wsEtc
bindsym $mod+Shift+h layout toggle tabbed split
bindsym $mod+Shift+t layout toggle split
bindsym $mod+Shift+n fullscreen
bindsym $mod+Shift+m exec vimb
bindsym $mod+Shift+w exit
bindsym $mod+Shift+v reload
bindsym XF86AudioRaiseVolume exec amixer set Master playback 1+
bindsym XF86AudioLowerVolume exec amixer set Master playback 1-
bindsym XF86AudioMute exec amixer set Master toggle
bindsym XF86AudioNext exec mplayercmd next
bindsym XF86AudioPrev exec mplayercmd prev
bindsym XF86AudioPlay exec mplayercmd pause

assign [title="^(st|screen)$"] $wsTty
assign [app_id="^vimb$"] $wsWeb
assign [class="^Firefox$"] $wsWeb
assign [class="^jetbrains-studio$"] $wsIde
assign [title="^(?!vedit|imv).*"] $wsEtc
for_window [title="^vedit$"] floating enable
for_window [class="^imv$"] floating enable
for_window [app_id="vimb"] layout tabbed

output * {
    bg #$black solid_color
}

input * {
    xkb_layout us
}

bar {
    height 25
    position top
    strip_workspace_numbers yes
    font pango:Monospace 14
    status_command python3 .local/bin/swaystatus.py
    tray_padding 0
    colors {
        statusline #$white
        background #$gray3
        separator #$gray3

        focused_workspace #$gray3 #$gray3 #$white
        active_workspace #$gray3 #$gray3 #$white
        inactive_workspace #$gray3 #$gray3 #$gray1
        urgent_workspace #$red #$red #$white
    }
}

include /etc/sway/config.d/*

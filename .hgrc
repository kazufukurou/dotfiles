[ui]
username=artem.mironov
ssh = ssh -C

%include .hgrc-private

[extensions]
color=
hgext.purge=
bookmarks=
graphlog=
mq=
shelve=
hgext.churn=

[defaults]
glog=--color=always --template "{label('custom.rev',rev)}:{label('custom.rev',node|short)} {label('custom.author',date|isodate)} {if(branches,'{label('custom.branch',branches)} ')}{desc|firstline|strip} {if(bookmarks,'{label('custom.rev',bookmarks)} ')}{if(tags,'{label('custom.rev',tags)} ')}{label('custom.author',author|person)}\n"

[alias]
slog=!$HG glog | grep -v "^[| ]*$"

[color]
custom.rev=yellow
custom.branch=magenta
custom.author=black
custom.date=blue

[bookmarks]
track.current=True

[merge-tools]
vimdiff.executable = vimdiff
vimdiff.args = -f -d $output -M $local $base $other -c "wincmd J" -c "set modifiable" -c "set write"
vimdiff.premerge = keep
